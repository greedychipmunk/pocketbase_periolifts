# PerioLifts Environment Configuration
# Copy this file to .env and update the values for your environment

# ==============================================
# APPLICATION ENVIRONMENT
# ==============================================

# Environment mode (development, production, test)
# Controls which PocketBase URL and configurations are used
ENVIRONMENT=development

# ==============================================
# POCKETBASE CONFIGURATION
# ==============================================

# PocketBase server port (used by both frontend and docker-compose)
# Default: 8090
POCKETBASE_PORT=8090

# PocketBase server host (for development)
# Default: localhost
POCKETBASE_HOST=localhost

# PocketBase server URL for the main application
# Development: http://localhost:8090 (or http://${POCKETBASE_HOST}:${POCKETBASE_PORT})
# Production: your production PocketBase instance URL
POCKETBASE_URL=http://localhost:8090

# Alternative environment-specific URLs (optional)
# These override the defaults in app_constants.dart
POCKETBASE_DEV_URL=http://localhost:8090
POCKETBASE_PROD_URL=https://your-production-pocketbase.example.com

# ==============================================
# POCKETBASE ADMIN CREDENTIALS
# ==============================================

# Admin credentials for PocketBase management scripts
# Required for: verify_user_email.dart and other admin scripts
# SECURITY: Never commit these to version control!
POCKETBASE_ADMIN_EMAIL=admin@example.com
POCKETBASE_ADMIN_PASSWORD=your_secure_admin_password

# ==============================================
# API CONFIGURATION
# ==============================================

# API timeout in seconds (optional, defaults to 30)
API_TIMEOUT_SECONDS=30

# Maximum retry attempts for failed API calls (optional, defaults to 3)
MAX_RETRY_ATTEMPTS=3

# Retry delay in seconds (optional, defaults to 2)
RETRY_DELAY_SECONDS=2

# Sync interval in minutes (optional, defaults to 5)
SYNC_INTERVAL_MINUTES=5

# ==============================================
# DATABASE CONFIGURATION
# ==============================================

# Local database configuration (SQLite)
DATABASE_NAME=periolifts_offline.db
DATABASE_VERSION=1

# Offline storage limits
MAX_OFFLINE_RECORDS=10000
SYNC_BATCH_SIZE=100

# ==============================================
# AUTHENTICATION CONFIGURATION
# ==============================================

# Token refresh threshold in minutes (optional, defaults to 30)
TOKEN_REFRESH_THRESHOLD_MINUTES=30

# Session timeout in hours (optional, defaults to 24)
SESSION_TIMEOUT_HOURS=24

# ==============================================
# FEATURE FLAGS
# ==============================================

# Enable/disable offline mode (true/false)
ENABLE_OFFLINE_MODE=true

# Enable/disable automatic sync (true/false)
ENABLE_AUTO_SYNC=true

# Enable/disable performance monitoring (true/false)
ENABLE_PERFORMANCE_MONITORING=true

# Enable/disable debug logging (true/false)
# Should be false in production for security and performance
ENABLE_DEBUG_LOGGING=false

# ==============================================
# PERFORMANCE CONFIGURATION
# ==============================================

# Maximum response time for workout tracking in milliseconds
MAX_TRACKING_RESPONSE_TIME_MS=100

# Maximum app startup time in seconds
MAX_STARTUP_TIME_SECONDS=3

# Required test coverage percentage (0.0 to 1.0)
REQUIRED_TEST_COVERAGE=0.90

# ==============================================
# UI CONFIGURATION
# ==============================================

# Animation duration in milliseconds
ANIMATION_DURATION_MS=300

# Debounce delay for user input in milliseconds
DEBOUNCE_DELAY_MS=500

# Default page size for paginated data
DEFAULT_PAGE_SIZE=30

# Maximum page size for paginated data
MAX_PAGE_SIZE=100

# ==============================================
# EXTERNAL SERVICES (Optional)
# ==============================================

# Email service configuration (if using external email provider)
# EMAIL_SERVICE_API_KEY=your_email_service_api_key
# EMAIL_SERVICE_DOMAIN=your_email_domain

# Analytics service configuration (if using external analytics)
# ANALYTICS_API_KEY=your_analytics_api_key
# ANALYTICS_PROJECT_ID=your_analytics_project_id

# Crash reporting service configuration (if using external crash reporting)
# CRASH_REPORTING_API_KEY=your_crash_reporting_api_key

# ==============================================
# DEVELOPMENT TOOLS
# ==============================================

# Enable Flutter web support in development
FLUTTER_WEB=true

# Enable hot reload in development
HOT_RELOAD=true

# ==============================================
# SECURITY CONFIGURATION
# ==============================================

# API keys and secrets (add as needed)
# Never commit actual values to version control
# API_SECRET_KEY=your_secret_key
# ENCRYPTION_KEY=your_encryption_key

# ==============================================
# DEPLOYMENT CONFIGURATION
# ==============================================

# Build configuration
# BUILD_MODE=release
# TARGET_PLATFORM=android

# App signing configuration (for CI/CD)
# ANDROID_KEYSTORE_PATH=path/to/keystore
# ANDROID_KEYSTORE_PASSWORD=keystore_password
# ANDROID_KEY_ALIAS=key_alias
# ANDROID_KEY_PASSWORD=key_password

# iOS signing configuration (for CI/CD)
# IOS_CERTIFICATE_PATH=path/to/certificate
# IOS_PROVISIONING_PROFILE_PATH=path/to/provisioning_profile

# ==============================================
# LOGGING AND MONITORING
# ==============================================

# Log level (debug, info, warning, error)
LOG_LEVEL=info

# Enable remote logging (true/false)
ENABLE_REMOTE_LOGGING=false

# Remote logging service configuration
# REMOTE_LOGGING_ENDPOINT=https://your-logging-service.example.com
# REMOTE_LOGGING_API_KEY=your_logging_api_key